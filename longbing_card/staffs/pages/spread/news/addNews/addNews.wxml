<form bindsubmit='formSubmit' class='{{(globalData.isIphoneX?"isIphoneX":"")}}' reportSubmit='true'><view class='spread-addNews-sec'><block wx:if='{{status == "group"}}'><input class='title' name='number' placeholder='请输入群总人数' value='{{paramData.groupNumber}}'></input></block><block wx:else><input class='title' maxlength='200' name='title' placeholder='在这里填写您的{{(status == "news"?"动态":"推广")}}名称'></input><textarea maxlength='-1' name='content' placeholder='请填写您的信息内容'></textarea></block></view><block wx:if='{{status == "news"}}'><view class='spread-addNews-sec'><block wx:if='{{tempFilePaths.length > 0}}'><view class='upLoadImg-sec clearfix'><block wx:for='{{tempFilePaths}}' wx:for-item='item' wx:for-index='index' wx:key='key'><view class='upload-staff-images rel'><em bindtap='toJump' class='abs circle' data-index='{{index}}' data-status='toDeleteImg'><i class='iconfont icon-open'></i></em><image class='br-10 fl' mode='aspectFill' src='{{item}}'></image></view></block></view></block><view bindtap='chooseImage' class='tc {{(tempFilePaths.length < 9?"":"hide")}}'><i class='iconfont icon-tupian'></i><view>添加图片</view></view></view></block><view class='{{(globalData.isIphoneX?"isIphoneX":"")}}' style='height:100rpx;'></view><button class='fix-addNews-btn fix {{(globalData.isIphoneX?"isIphoneX":"")}}' data-status='toAddNews' formType='submit' hoverClass='none' style='height:auto;'><view class='red-text'>确定{{(status == "group"?"":"发布")}}</view></button></form>